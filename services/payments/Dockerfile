# dockerfile
###############################################################
# PAYMENTS SERVICE DOCKERFILE
# Production-grade Gunicorn setup
###############################################################

FROM python:3.11-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY app.py .

EXPOSE 5003

CMD ["gunicorn", "-b", "0.0.0.0:5003", "app:app"]
